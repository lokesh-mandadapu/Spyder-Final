# SPYDER Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/spyder

# For MongoDB Atlas (cloud) - Replace with your actual credentials:
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=yourAppName

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Secret (for future authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
CORS_ENABLED=true
